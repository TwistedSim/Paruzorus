version: '3.7'

services:
  
  frontend:
    build:
      target: install-stage
    volumes:
      - /app/node_modules
      - ./frontend:/app:ro
    command: ["yarn", "start"]

  webserver:
    volumes:
      - ./webserver:/app
    environment:
      - FLASK_ENV=development

  proxy:
    ports:
    - 127.0.0.1:80:80
    - 127.0.0.1:443:443
