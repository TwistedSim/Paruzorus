version: '3.7'

services:
  
  frontend:

    build:
      target: build-stage

    volumes:
      - ./frontend/public:/app/public
      - ./frontend/src:/app/src
    
    command: ["yarn", "start"]

  webserver:

    volumes:
      - ./webserver:/app
      
    environment:
      - CONFIGURATION_SETUP=dev
      - FLASK_ENV=development

